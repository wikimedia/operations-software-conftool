{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "group": {
            "type": "object",
            "properties": {
                "weight": {"type": "integer"},
                "pooled": {"type": "boolean"}
            },
            "required": ["pooled", "weight"]
        },
        "section": {
            "type": "object",
            "properties": {
                "pooled": {"type": "boolean"},
                "weight": {"type": "integer"},
                "percentage": {"type": "integer"},
                "groups": {
                    "type": "object",
                    "patternProperties": {
                        "^(vslow|dump|recentchanges.*)$": {"$ref": "#/definitions/group"},
                        "^(api|contributions|logpager|watchlist)$": {"$ref": "#/definitions/group"}
                    },
                    "additionalProperties": false
                },
                "comment": {"type": "string"}
            },
            "required": ["pooled", "weight", "percentage"]
        }
    },
    "description": "Represents a database instance specific to a section\n",
    "type": "object",
    "properties": {
        "hostname": {"type": "string"},
        "host_ip": {
            "type": "string",
            "anyOf": [
                {"format": "ipv4"},
                {"format": "ipv6"}
            ]
        },
        "port": {"type": "integer"},
        "sections": {
            "type": "object",
            "patternProperties": {
                "^(s[1-8]|wikitech)$": {"$ref": "#/definitions/section"}
            },
            "additionalProperties": false
        }
    },
    "required": ["hostname", "host_ip", "port", "sections"]
}
